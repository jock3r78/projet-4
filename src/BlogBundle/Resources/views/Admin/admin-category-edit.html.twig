{% extends("::layout/layout-admin.html.twig") %}

{% block body %}
    <div class="container">
        <h1 class="text-center">Espace d'administration</h1>
        <a href="{{ path('admin_category') }}" class="btn btn-warning"><span
                    class="glyphicon glyphicon-arrow-left"></span> Retour à la liste des catégories</a>

        <div class="row">
            {{ form_start(form) }}
            {{ form_errors(form) }}
            <div class="col-md-6">
                <div class="form-group">
                    {{ form_label(form.name, "nom") }}
                    {{ form_errors(form.name) }}
                    {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-12">
                    {{ form_widget(form.submit, {'attr': {'class': 'btn btn-primary'}}) }}
                </div>
            </div>
            {{ form_rest(form) }}
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}

{% block script %}
    <script src="{{ asset('js/tinymce.min.js') }}"></script>
    <script>tinymce.init({selector: 'textarea'});</script>
{% endblock %}