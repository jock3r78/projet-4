{% extends("::layout/layout-admin.html.twig") %}

{% block body %}
    <div class="container">
        <a href="{{ path('admin_comments') }}" class="btn btn-warning"><span
                    class="glyphicon glyphicon-arrow-left"></span> Retour Ã  la liste de commentaire</a>
        <h1>Espace d'administration</h1>
        <div class="row">
            {{ form_start(form) }}
            {{ form_errors(form) }}
            <div class="col-md-6">
                <div class="form-group">
                    {{ form_label(form.username, "nom") }}
                    {{ form_errors(form.username) }}
                    {{ form_widget(form.username, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    {{ form_label(form.email, "Email") }}
                    {{ form_errors(form.email) }}
                    {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>
            <div class="col-md-12">
                <div class="form-group">
                    {{ form_label(form.content, "Contenu") }}
                    {{ form_errors(form.content) }}
                    {{ form_widget(form.content, {'attr': {'class': 'form-control', 'rows': '5'}}) }}
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-12">
                    {{ form_widget(form.submit, {'attr': {'class': 'btn btn-primary'}}) }}
                </div>
            </div>
            {{ form_rest(form) }}
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}

{% block script %}
    <script src="{{ asset('js/tinymce.min.js') }}"></script>
    <script>tinymce.init({selector: 'textarea'});</script>
{% endblock %}