{% extends("::layout/layout.html.twig") %}

{% block body %}
    <!-- single -->
    <div class="single-page-artical">
        <div class="artical-content">
            <h3 class="text-center">{{ post.name }}</h3>
            <h4> Episode : {{ post.episode }}</h4>
            <hr>
            <p>{{ post.content|raw }}</p>
            <img class="img-responsive" src="{{ post.photo }}" alt=" " />
        </div>
        <div class="artical-links">
            <ul>
                <li><small> </small>Publi√© le :<span>{{ post.createdAt|date("m/d/Y") }} </span></li>
                <li><a href="#"><small class="admin"> </small><span>{{ post.user.username }}</span></a></li>
            </ul>
        </div>
        <!-- comments view-->
        <div class="comment-grid-top">
            <h3>Vos Commentaires</h3>
                {% import "BlogBundle:Default:macro.html.twig" as macros %}

              {{ macros.comments(comments) }}



        </div>
        <!-- comments write -->
        <div class="artical-commentbox">
            <h3>Ecrire un commentaire</h3>
            <div class="table-form">
                {{ render(controller('BlogBundle:Post:addComment', {id: post.id})) }}
            </div>
        </div>
    </div>
    <!-- single -->
{% endblock %}

{% block script %}
    <script type="text/javascript">
        fadeInSuccess()
    </script>
{% endblock %}